function convertToRoman(num) {

    var letters = [{
        number: 1000,
        letter: "M"
    }, {
        number: 900,
        letter: "CM"
    }, {
        number: 500,
        letter: "D"
    }, {
        number: 400,
        letter: "CD"
    }, {
        number: 100,
        letter: "C"
    }, {
        number: 90,
        letter: "XC"
    }, {
        number: 50,
        letter: "L"
    }, {
        number: 40,
        letter: "XL"
    }, {
        number: 10,
        letter: "X"
    }, {
        number: 9,
        letter: "IX"
    }, {
        number: 5,
        letter: "V"
    }, {
        number: 4,
        letter: "IV"
    }, {
        number: 1,
        letter: "I"
    }];

    var counter = num;
    var newArray = [];
    var result = "";
    for (var i = 0; i < letters.length; i++) {

        if (counter >= 1000) {
            newArray.push("M");
            counter -= 1000;
        }
        if (counter >= letters[i].number) {

            newArray.push(letters[i].letter);
            counter -= letters[i].number;
            i = 0;
        }
    }



    return newArray.join([separator = '']);

}

convertToRoman(99);
